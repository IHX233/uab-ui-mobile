{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "outDir": "./dist",
    "lib": ["ES2016", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "paths": {
      "uab-ui-mobile": ["src/index.ts"],
      "@@/*": [".dumi/tmp/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "website"]
}
